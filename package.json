{
	"name": "python-linter",
	"version": "1.0.1",
	"description": "This package is a All-In-One linter for python code, it internally use multiple linting tools",
	"license": "MIT",
	"repository": "https://github.com/elarivie/atom-python-linter",
	"author": {
		"name": "Éric Larivière",
		"email": "ericlariviere@hotmail.com"
	},
	"private": false,
	"engines": {
		"atom": ">=1.13.0"
	},
	"scripts": {
		"lint": "npx xo",
		"test": "atom -t ./spec"
	},
	"keywords": [
		"python",
		"lint",
		"flake8",
		"Mypy",
		"pydocstyle",
		"pylint",
		"PEP 8",
		"PEP 257",
		"PEP 484"
	],
	"atomTestRunner": "atom-mocha",
	"dependencies": {
		"atom-linter": "^10.0.0",
		"atom-package-deps": "^5.0.0",
		"mapped-disposable": "^1.0.3",
		"named-js-regexp": "^1.3.5"
	},
	"devDependencies": {
		"atom-mocha": "^2.2.0",
		"xo": "^0.24.0"
	},
	"package-deps": [
		"linter"
	],
	"xo": {
		"globals": [
			"AtomMocha",
			"Chai",
			"after",
			"afterEach",
			"atom",
			"attachToDOM",
			"before",
			"beforeEach",
			"describe",
			"document",
			"expect",
			"it",
			"when"
		],
		"ignores": [
			"atom/**"
		],
		"rules": {
			"import/prefer-default-export": "off",
			"max-nested-callbacks": "off",
			"camelcase": [
				"error",
				{
					"allow": []
				}
			]
		},
		"overrides": [
			{
				"files": [
					"spec/*.js"
				],
				"rules": {
					"no-unused-expressions": "off"
				}
			}
		]
	},
	"providedServices": {
		"linter": {
			"versions": {
				"2.0.0": "provideLinter"
			}
		}
	}
}
