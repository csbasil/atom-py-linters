{
  "name": "py-linters",
  "main": "./lib/main.js",
  "version": "0.0.5",
  "description": "This package is a modified version of python-linters package which supports project specific configurations via toml file.",
  "license": "MIT",
  "repository": "https://github.com/csbasil/atom-py-linters",
  "author": {
    "name": "csbasil",
    "email": "csbasil@gmail.com"
  },
  "private": false,
  "engines": {
    "atom": ">=1.13.0"
  },
  "scripts": {
    "lint": "npx xo",
    "test": "atom -t ./spec"
  },
  "keywords": [
    "python",
    "lint",
    "flake8",
    "Mypy",
    "pydocstyle",
    "pylint",
    "PEP 8",
    "PEP 257",
    "PEP 484"
  ],
  "dependencies": {
    "atom-linter": "^10.0.0",
    "atom-package-deps": "^5.1.0",
    "mapped-disposable": "^1.0.3",
    "named-js-regexp": "^1.3.5",
    "toml": "^3.0.0"
  },
  "devDependencies": {
    "xo": "^0.25.3",
    "jasmine-fix": "1.3.1",
    "npm-check-updates": "^4.0.1"
  },
  "package-deps": [
    "linter"
  ],
  "xo": {
    "globals": [
      "Chai",
      "after",
      "afterEach",
      "atom",
      "attachToDOM",
      "before",
      "beforeEach",
      "describe",
      "document",
      "expect",
      "it",
      "when",
      "waitsForPromise",
      "window"
    ],
    "ignores": [
      "atom/**"
    ],
    "rules": {
      "no-constant-condition": "off",
      "yoda": [
        "error",
        "always",
        {
          "onlyEquality": false
        }
      ],
      "no-unused-vars": [
        "warn",
        {
          "args": "none"
        }
      ],
      "no-await-in-loop": "off",
      "import/prefer-default-export": "off",
      "max-nested-callbacks": "off",
      "camelcase": [
        "warn",
        {
          "allow": []
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "spec/*.js"
        ],
        "rules": {
          "no-unused-expressions": "off"
        }
      }
    ]
  },
  "providedServices": {
    "linter": {
      "versions": {
        "2.0.0": "provideLinter"
      }
    }
  }
}
